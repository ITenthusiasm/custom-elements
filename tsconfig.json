/* TSConfig for Linting the Entire Project */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "skipLibCheck": true // Rollup has some weird type-related bugs that we need to ignore
  },
  "include": [
    "src",
    "main.js",
    "library-tests",
    "playwright.config.ts",
    "vite.config.ts",
    "svelte.config.js",
    "scripts"
  ]
}
